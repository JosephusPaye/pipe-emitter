{
  "name": "@josephuspaye/pipe-emitter",
  "version": "0.0.0",
  "description": "An inter-process event emitter that uses UNIX domain sockets (Linux, macOS) and named pipes (Windows).",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "repository": "https://github.com/JosephusPaye/pipe-emitter.git",
  "author": "Josephus Paye II",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "uvu -r esm tests/ -i util.js",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.js\" \"*.{js,json,md}\"",
    "format:check": "prettier --list-different \"src/**/*.ts\" \"tests/**/*.js\" \"*.{js,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "esm": "^3.2.25",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3",
    "uvu": "^0.3.4"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true
  },
  "dependencies": {
    "mitt": "^2.1.0"
  }
}
